<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen10"
    android:background="@color/colorH"
    android:weightSum="1">

   <!-- <com.embedded.contacts.utils.BitVaultFont
        style="@style/style_small_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen10"
        android:id="@+id/secure_cal_key"
        android:background="?android:selectableItemBackground"
        android:textColor="@color/colorPrimary"
        android:text="@string/key_icon" />-->
    <ImageView
        android:id="@+id/secure_cal_key"
        style="@style/style_small_font"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/dimen5"
        android:layout_height="@dimen/dimen25"
        android:src="@drawable/securecallicon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dimen5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/publicKeyTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/keyHeadingTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/public_key" />

    </LinearLayout>

    <ImageView
        android:id="@+id/msgImg"
        android:layout_width="@dimen/msg_icon_size"
        android:layout_height="@dimen/msg_icon_size"
        android:background="?android:selectableItemBackground"
        android:padding="@dimen/dimen10"
        android:src="@drawable/ic_secure_messaging"
        android:text="@string/msg_icon" />


</LinearLayout>
